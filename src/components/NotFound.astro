---
/**
 * Custom 404 page for SmartBolig.net
 * Overrides Starlight's default 404 component
 */
import type { Props } from '@astrojs/starlight/props';
import CallToAction from '@astrojs/starlight/components/CallToAction.astro';

// Detect language from URL
const lang = Astro.url.pathname.startsWith('/en/') ? 'en' : 'da';

const content = {
  da: {
    title: '404 - Side ikke fundet',
    heading: 'Siden blev ikke fundet',
    description: 'Beklager! Den side du leder efter eksisterer ikke, er blevet flyttet, eller er midlertidigt utilg√¶ngelig.',
    homeLink: 'G√• til forsiden',
    haLink: 'Home Assistant',
    espLink: 'ESP32',
    popularTitle: 'Popul√¶re guides:',
    guides: [
      { href: '/da/home-assistant/kom-godt-i-gang/', text: 'Kom godt i gang' },
      { href: '/da/home-assistant/zigbee2mqtt/', text: 'Zigbee2MQTT' },
      { href: '/da/esp32/temperatur-sensor/', text: 'Temperatur sensor' },
      { href: '/da/home-assistant/foerste-automation/', text: 'Din f√∏rste automation' },
    ],
    langSwitch: { href: '/en/', text: 'English version', flag: 'üá¨üáß' },
    homePath: '/da/',
    haPath: '/da/home-assistant/',
    espPath: '/da/esp32/',
  },
  en: {
    title: '404 - Page not found',
    heading: 'Page not found',
    description: 'Sorry! The page you are looking for does not exist, has been moved, or is temporarily unavailable.',
    homeLink: 'Go to homepage',
    haLink: 'Home Assistant',
    espLink: 'ESP32',
    popularTitle: 'Popular guides:',
    guides: [
      { href: '/en/home-assistant/kom-godt-i-gang/', text: 'Getting Started' },
      { href: '/en/home-assistant/zigbee2mqtt/', text: 'Zigbee2MQTT' },
      { href: '/en/esp32/temperatur-sensor/', text: 'Temperature Sensor' },
      { href: '/en/home-assistant/foerste-automation/', text: 'First Automation' },
    ],
    langSwitch: { href: '/da/', text: 'Dansk version', flag: 'üá©üá∞' },
    homePath: '/en/',
    haPath: '/en/home-assistant/',
    espPath: '/en/esp32/',
  },
};

const t = content[lang];
---

<!DOCTYPE html>
<html lang={lang}>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{t.title} | SmartBolig.net</title>
    <meta name="robots" content="noindex, nofollow">
    <link rel="icon" href="/favicon.ico" sizes="32x32">
    <link rel="icon" href="/favicon.svg" type="image/svg+xml">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
            background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
            color: #e4e4e7;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
        }
        .container {
            text-align: center;
            max-width: 600px;
        }
        .emoji {
            font-size: 4rem;
            margin-bottom: 1rem;
        }
        .error-code {
            font-size: 8rem;
            font-weight: bold;
            color: #818cf8;
            line-height: 1;
            margin-bottom: 1rem;
        }
        h1 {
            font-size: 2rem;
            margin-bottom: 1rem;
            color: #f4f4f5;
        }
        p {
            font-size: 1.1rem;
            color: #a1a1aa;
            margin-bottom: 2rem;
            line-height: 1.6;
        }
        .links {
            display: flex;
            flex-wrap: wrap;
            gap: 1rem;
            justify-content: center;
            margin-bottom: 2rem;
        }
        a {
            display: inline-block;
            padding: 0.75rem 1.5rem;
            background: #818cf8;
            color: white;
            text-decoration: none;
            border-radius: 0.5rem;
            font-weight: 500;
            transition: background 0.2s;
        }
        a:hover {
            background: #6366f1;
        }
        a.secondary {
            background: transparent;
            border: 1px solid #52525b;
            color: #e4e4e7;
        }
        a.secondary:hover {
            border-color: #818cf8;
            color: #818cf8;
        }
        .popular {
            margin-top: 2rem;
            padding-top: 2rem;
            border-top: 1px solid #27272a;
        }
        .popular h2 {
            font-size: 1rem;
            color: #71717a;
            margin-bottom: 1rem;
            font-weight: normal;
        }
        .popular-links {
            display: flex;
            flex-wrap: wrap;
            gap: 0.5rem;
            justify-content: center;
        }
        .popular-links a {
            padding: 0.5rem 1rem;
            font-size: 0.9rem;
            background: #27272a;
        }
        .popular-links a:hover {
            background: #3f3f46;
        }
        .lang-switch {
            margin-top: 2rem;
            font-size: 0.9rem;
            color: #71717a;
        }
        .lang-switch a {
            background: transparent;
            padding: 0.25rem 0.5rem;
            color: #a1a1aa;
        }
        .lang-switch a:hover {
            color: #818cf8;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="emoji">üè†</div>
        <div class="error-code">404</div>
        <h1>{t.heading}</h1>
        <p>{t.description}</p>

        <div class="links">
            <a href={t.homePath}>üè† {t.homeLink}</a>
            <a href={t.haPath} class="secondary">{t.haLink}</a>
            <a href={t.espPath} class="secondary">{t.espLink}</a>
        </div>

        <div class="popular">
            <h2>{t.popularTitle}</h2>
            <div class="popular-links">
                {t.guides.map(guide => (
                    <a href={guide.href}>{guide.text}</a>
                ))}
            </div>
        </div>

        <div class="lang-switch">
            <a href={t.langSwitch.href}>{t.langSwitch.flag} {t.langSwitch.text}</a>
        </div>
    </div>
</body>
</html>
